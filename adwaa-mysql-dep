apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql
  labels:
    app: mysql
    name: adwaa-sql
spec:
  selector:
    matchLabels:
      app: mysql
      name: adwaa-sql
  template:
    metadata:
      labels:
        app: mysql
        name: adwaa-sql
    spec:
      containers:
        - name: mysql
          image: mysql:latest
          env:
            - name: MYSQL_ROOT_PASSWORD
              value: DevOps222
            - name: MYSQL_DATABASE
              value: Tawazun  
          ports:
            - containerPort: 3306
              name: mysql
          volumeMounts:
            - mountPath: /var/lib/mysql
              name: aws-pvc
      volumes:
        - name: aws-pvc
          persistentVolumeClaim:
            claimName: aws-ebs-dynamic-pvc-adwaa